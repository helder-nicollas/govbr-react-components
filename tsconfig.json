{
  "compilerOptions": {
    "outDir": "dist",  
    "declaration": true,  
    "declarationDir": "dist/types",  
    "emitDeclarationOnly": true,  
    "noEmit": false,  
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
